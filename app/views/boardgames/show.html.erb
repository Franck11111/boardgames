
<div class="show-game">

  <div class="container">

    </br></br></br></br>
      <div class="game-title">
        <strong></strong>
        <%= @boardgame.title %>
      </div>

      <p>
        <strong>Price</strong>
        <%= @boardgame.price_per_day %>
      </p>

        <div class="game-picture" src="https://images.unsplash.com/photo-1522787345986-d5c7885a889e?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=crop&amp;w=1500&amp;q=80"></div>

      <p>
        <strong>Description</strong>
      <%= @boardgame.description %>
     </p>

     <% if policy(@boardgame).edit? %>
          <%= link_to "Edit", edit_boardgame_path(@boardgame), {class: 'btn btn-edit'} %>
        <% end %>
        <% if policy(@boardgame).destroy? %>
          <%= link_to "Delete", @boardgame, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>


    </div>
  </div>



<div class="container p-2">
   <div class="row">
     <% if policy(Boardgame).create? %>
       <a class="btn btn-gradient" href="<%= new_boardgame_path%>">Book</a>
     <% end %>
  </div>
</div>
