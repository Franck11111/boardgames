<div class="container">
  <div class="row">
    <div class="col">
        <div class="h-100 p-3">
          <div class="img-fluid card-trip"> <img src="<%= @boardgame.cover_url %>"> </div>
        </div>
    </div>
    <div class="col">
        <div class="p-3 right-side">
          <div class="d-flex justify-content-between align-items-center">
            <h3><%= @boardgame.title %></h3>
          </div>

          <h3><%= @boardgame.price_per_day %>â‚¬</h3>

          <div class="mt-2 pr-3 content">
            <p><%= @boardgame.description %></p>
          </div>

          <div class="">

                <% if policy(Boardgame).create? %>
                  <%= link_to "Book", new_boardgame_path, class:'btn btn-gradient' %>
                <% end %>

          </div>
          <br>
          <div>
          <button class="btn btn-gradient">
              <% if policy(@boardgame).edit? %>
                <%= link_to "Edit", edit_boardgame_path(@boardgame) %>
              <% end %>
          </button>

          <button class="btn btn-gradient">
              <% if policy(@boardgame).destroy? %>
                <%= link_to "Delete", @boardgame, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
