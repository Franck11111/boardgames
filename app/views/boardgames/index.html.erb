
<div class="container p-2">

  <div class="mt-3 text-center">
    <% if @query %>
      <p>You searched for <strong><%= @query %></strong>. We found <%= @boardgames.count %> boardgames out of our <%= Boardgame.count %> on our website.</p>
    <% else %>
      <h1>All <strong> <%= Boardgame.count %> </strong> boardgames</h1>
    <% end %>
  </div>

  <div class="text-center">
  <% if policy(Boardgame).create? %>
      <%= link_to "New Boardgame", new_boardgame_path, {class: 'btn btn-gradient-2 mb-5'} %>
    <% end %>
  </div>

  <div class="cards-index">
    <% @boardgames.each do |boardgame| %>
      <% if policy(boardgame).show? %>
        <%= link_to boardgame do %>
          <div class="card-trip">
            <img src= "<%= boardgame.cover_url %>" />
            <div class="card-trip-infos">
              <div>
                <h2><%= boardgame.title %></h2>
              </div>
              <h2 class="card-trip-pricing">â‚¬<%= boardgame.price_per_day %></h2>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>



</div>
